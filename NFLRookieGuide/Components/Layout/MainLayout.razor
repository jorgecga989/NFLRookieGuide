@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">NFL Rookie Guide</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto w-100">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/teams" Match="NavLinkMatch.All">Teams</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/rules" Match="NavLinkMatch.All">Rules</NavLink>
                </li>
                <AuthorizeView Context="innerContext">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/catalogue" Match="NavLinkMatch.All">Your teams</NavLink>
                    </li>
                </AuthorizeView>
            </ul>
            <ul class="nav navbar-nav ml-auto w-100 justify-content-end">
                <AuthorizeView>
                    <Authorized>
                        <li class="navbar-text"> @context.User.Identity?.Name </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/Account/Logout" Match="NavLinkMatch.All">Logout</NavLink>
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/Account/Login" Match="NavLinkMatch.Prefix">Login</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/Account/Register" Match="NavLinkMatch.Prefix">Register</NavLink>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

<main class="container">
    <div class="p-2 rounded">
        @Body
    </div>
</main>